<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"> <!-- Установлен тёмный фон для всего экрана -->

    <!-- Верхняя панель с кнопкой назад и заголовком -->
    <LinearLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/black"
        android:padding="8dp">

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Назад"
            android:textColor="#FFFFFF"
            android:background="?attr/selectableItemBackground"
            android:layout_gravity="start" />

        <TextView
            android:id="@+id/humanPanelTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HumanPanel"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <!-- Разделительная полоса -->
    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFFFFF"
        android:layout_below="@id/topPanel" />

    <!-- Основная информация о человеке -->
    <LinearLayout
        android:id="@+id/personInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_below="@id/separator"> <!-- Изменено с @id/topPanel на @id/separator -->

        <ImageView
            android:id="@+id/personImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_no_photo"
            android:contentDescription="Person Photo"
            android:background="#CCCCCC"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lastNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Фамилия: Иванов"
                android:textSize="16sp"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/firstNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Имя: Иван"
                android:textSize="16sp"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/middleNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Отчество: Иванович"
                android:textSize="16sp"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/meetingDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Дата знакомства: 01-01-2020"
                android:textSize="16sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>

    <!-- Блок с временем с момента знакомства -->
    <TextView
        android:id="@+id/timePassedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 год 11 месяцев 19 дней (XXX дней)"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_below="@id/personInfoLayout"
        android:layout_margin="16dp" />

    <!-- Дополнительная информация с прокруткой -->
    <ScrollView
        android:id="@+id/detailScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/timePassedTextView">

        <LinearLayout
            android:id="@+id/detailContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Здесь будут динамически добавляться дополнительные поля -->
        </LinearLayout>
    </ScrollView>

    <!-- Кнопка для редактирования информации -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/editPersonButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:backgroundTint="#FF4081"
        android:contentDescription="Edit Person" />
</RelativeLayout>
